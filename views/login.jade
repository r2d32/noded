extends layout

block upStyles
  link(rel="stylesheet", href="login.css") 

block content
  .login
    .col-md-4.col-md-offset-6
      .panel.panel-default
            .panel-heading
              h3.panel-title Panel title
            .panel-body
              form.form-signin(role='form' method='post')
                h2.form-signin-heading Please Sign in
                input.form-control(name='username', placeholder='username', required='', autofocus='')
                input.form-control(name='password', type='password', placeholder='password', required='')
                label.checkbox
                button.btn.btn-lg.btn-primary.btn-block(type='submit') Sign in


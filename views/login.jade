extends layout

block content
    h1= title
    form(method='post')
        div(class='col-md-3')
            input(name='username', class='form-control', placeholder='username')
        div(class='col-md-3')
            input(name='password', class='form-control', type='password', placeholder='password')
        input(type='submit', class='btn btn-primary', value='Log in')